{
  "include": ["NetscriptDefinitions.d.ts", "scripts/**/*"],
  "exclude": ["lib/react.ts"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "rootDir": "scripts/",
    "outDir": "dist/",
    "baseUrl": "scripts/",
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "/*": ["*"],
      "@ns": ["../NetscriptDefinitions.d.ts"],
      "@react": ["lib/react.ts"]
    }
  }
}
